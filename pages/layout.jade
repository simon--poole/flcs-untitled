doctype html
html(lang="en")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title= title
		link(rel='stylesheet', href='static/css/bootstrap.min.css')
	body
		nav.navbar.navbar-static-top.navbar-default
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Untitled Project
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/') Home
						li.dropdown(class=(page === 'games' ? 'active' : ''))
							a(href='/games', data-toggle="dropdown") Games 
								span.caret
							ul.dropdown-menu
								li
									a(href="/games/eulcs") EU LCS
								li
									a(href="/games/nalcs") NA LCS
						li(class=(page === 'about' ? 'active' : ''))
							a(href='/about') About
						li(class=(page === 'contact' ? 'active' : ''))
							a(href='/contact') Contact
		.container
			block content
		script(src="static/js/bootstrap.min.js")