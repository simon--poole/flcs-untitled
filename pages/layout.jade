-if(typeof relUrl !== 'string') relUrl = "";
doctype html
html(lang="en")
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		title= title
		link(rel='stylesheet', href=relUrl+'static/css/bootstrap.min.css')
		script(src='https://code.jquery.com/jquery-2.1.4.min.js')
	body
		nav.navbar.navbar-static-top.navbar-default
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Untitled Project
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href='/') Home
						li.dropdown(class=(page === 'games' ? 'active' : ''))
							a(href='/games', data-toggle="dropdown") Games 
								span.caret
							ul.dropdown-menu
								li
									a(href="/games/eulcs") EU LCS
								li
									a(href="/games/nalcs") NA LCS
						li.dropdown(class=(page === 'teams' ? 'active' : ''))
							a(href='/teams', data-toggle="dropdown") Teams 
								span.caret
							ul.dropdown-menu
								li
									a(href="#") EU LCS
								li
									a(href="#") NA LCS
						li(class=(page === 'about' ? 'active' : ''))
							a(href='/about') About
						li(class=(page === 'contact' ? 'active' : ''))
							a(href='/contact') Contact
						-if(typeof user !== 'undefined')
							li(class=(page === 'manage' ? 'active' : ''))
								a(href='/manage') Manage
					-if(typeof user !== 'undefined')
						ul.navbar-right.nav.navbar-nav
							li
								p.navbar-text
									|Logged in as #{user.username}  
								
									a.navbar-link.small(href="/logout")
										strong (Log Out)	
		.container
			block content
		script(src=relUrl+"static/js/bootstrap.min.js")
		style.
			.err {
				color: red;
			}
			.warn {
				color: orange;
			}
			blockquote.has-error {
				  border-left: 5px solid rgb(102, 7, 7);
			}